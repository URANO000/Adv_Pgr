@model AP_MVC.Models.Usuario

@{
    ViewData["Title"] = "Registro";
    Layout = "_LayoutExterno";
}

<!-- Section: Design Block -->
<section class="text-center text-lg-start">
    <style>
        .cascading-right {
            margin-right: -50px;
        }

        @@media (max-width: 991.98px) {
            .cascading-right {
                margin-right: 0;
            }
        }

        .login-icon {
            color: var(--bs-primary);
            font-size: 2.5rem;
            margin-bottom: 0.75rem;
        }

        .login-section {
            min-height: calc(100vh - 200px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .login-container {
            max-width: 1200px;
        }
    </style>
    <!-- Jumbotron -->
    <div class="login-section">
        <div class="container login-container">
            <div class="row g-0 align-items-center">

                <div class="col-lg-5 mb-5 mb-lg-0">
                    <div class="card cascading-right bg-body-tertiary" style="backdrop-filter: blur(30px);">
                        <div class="card-body p-4 shadow-5 text-center">

                            <iconify-icon icon="mdi:account-plus" class="login-icon"></iconify-icon>
                            <h2 class="fw-bold mb-3">Crear cuenta</h2>
                            <p class="text-muted mb-4">Únete a nuestra comunidad de adopción responsable</p>

                            <form asp-controller="Home" asp-action="Registro" method="post">

                                <div class="form-floating mb-4">
                                    <input type="text" id="Identificacion" name="Identificacion"
                                           class="form-control" asp-for="Identificacion"
                                           placeholder="Identificación" required />
                                    <label for="Identificacion">Identificación</label>
                                    <span asp-validation-for="Identificacion" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input type="text" id="NombreCompleto" name="NombreCompleto"
                                           class="form-control" asp-for="NombreCompleto"
                                           placeholder="Nombre Completo" required />
                                    <label for="NombreCompleto">Nombre Completo</label>
                                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input type="email" id="CorreoElectronico" name="CorreoElectronico"
                                           class="form-control" asp-for="CorreoElectronico"
                                           placeholder="Correo Electrónico" required />
                                    <label for="CorreoElectronico">Correo Electrónico</label>
                                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input type="tel" id="Telefono" name="Telefono"
                                           class="form-control" asp-for="Telefono"
                                           placeholder="Teléfono" required />
                                    <label for="Telefono">Teléfono</label>
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <select id="Provincia" name="Provincia" class="form-select" asp-for="Provincia" required>
                                        <option value="">Seleccione...</option>
                                        <option value="San José">San José</option>
                                        <option value="Alajuela">Alajuela</option>
                                        <option value="Cartago">Cartago</option>
                                        <option value="Heredia">Heredia</option>
                                        <option value="Guanacaste">Guanacaste</option>
                                        <option value="Puntarenas">Puntarenas</option>
                                        <option value="Limón">Limón</option>
                                    </select>
                                    <label for="Provincia">Provincia</label>
                                    <span asp-validation-for="Provincia" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input type="password" id="Contrasenna" name="Contrasenna"
                                           class="form-control" asp-for="Contrasenna"
                                           placeholder="Contraseña" required />
                                    <label for="Contrasenna">Contraseña</label>
                                    <span asp-validation-for="Contrasenna" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input type="password" id="ConfirmarContrasenna" name="ConfirmarContrasenna"
                                           class="form-control" asp-for="ConfirmarContrasenna"
                                           placeholder="Confirmar Contraseña" required />
                                    <label for="ConfirmarContrasenna">Confirmar Contraseña</label>
                                    <span asp-validation-for="ConfirmarContrasenna" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-primary btn-lg w-100 mb-4">
                                    <iconify-icon icon="mdi:account-check" class="me-2"></iconify-icon>
                                    Registrarse
                                </button>

                                <div class="text-center">
                                    <p class="mb-0">
                                        ¿Ya tienes cuenta?
                                        <a asp-controller="Home" asp-action="Login" class="fw-bold text-decoration-none">
                                            Inicia sesión
                                        </a>
                                    </p>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <img src="~/img/registro.png" class="w-100 rounded-4 shadow-4" />
                </div>

            </div>
        </div>
    </div>
</section>